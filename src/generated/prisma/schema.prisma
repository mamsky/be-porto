generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  email    String @unique
  password String

  profile Profile[]
  project Project[]
  tech    Tech[]
  work    Work[]
}

model Profile {
  id         String @id @default(uuid())
  surname    String
  images     String
  profession String
  bio        String
  location   String
  status     Option

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Project {
  id          String    @id @default(uuid())
  title       String
  description String
  techstack   ArrTech[]
  demo        String?
  github      String?
  images      String

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Tech {
  id     String @id @default(uuid())
  name   String
  images String

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model ArrTech {
  id        String @id @default(uuid())
  techstack String

  tech   Project @relation(fields: [techId], references: [id])
  techId String
}

model Work {
  id          String        @id @default(uuid())
  title       String
  company     String
  location    String
  description ArrDesc[]
  technology  ArrTechWork[]
  startDate   String
  endDate     String
  images      String

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model ArrDesc {
  id   String @id @default(uuid())
  desc String

  description   Work   @relation(fields: [descriptionId], references: [id])
  descriptionId String
}

model ArrTechWork {
  id        String @id @default(uuid())
  techstack String

  techId String
  tech   Work   @relation(fields: [techId], references: [id])
}

enum Option {
  true
  false
}
